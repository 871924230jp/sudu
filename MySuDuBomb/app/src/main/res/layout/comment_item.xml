<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/civ_comment"
    android:layout_width="40dp"
    android:background="@mipmap/mine_touxiang"
    android:layout_height="40dp"/>
    <TextView
        android:id="@+id/tv_comment_name"
        android:layout_toRightOf="@id/civ_comment"
        android:layout_width="wrap_content"
        android:text="所爱隔山海"
        android:textSize="15dp"
        android:textColor="#706565"
        android:layout_marginLeft="15dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_comment_name"
        android:text="2019.01.03"
        android:textSize="15dp"
        android:textColor="#706565"
        android:layout_marginLeft="15dp"
        />
    <TextView
        android:id="@+id/tv_comment_data"
        android:layout_below="@id/tv_comment_name"
        android:layout_toRightOf="@id/civ_comment"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="40dp"
        android:textSize="15dp"
        android:layout_marginTop="5dp"
        android:textColor="#000"
        android:text="wdoijdiawiudhioawhdioawhdiawhdiahidhawidhawiohdiawawdaiuhwidhiahidhawidhiahdiawhdiawhdiawhdidaw"
        android:layout_width="match_parent"
        android:maxLines="3"
        android:layout_height="wrap_content"/>
</RelativeLayout>