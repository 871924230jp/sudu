<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_Whitecolor">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/color_Maincolor"
        >
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_Maincolor"
        android:padding="@dimen/all_title_padding">
        <Button
            android:onClick="onclick"
            android:id="@+id/btn_finish_xiangxi"
            android:layout_width="@dimen/all_title_bt_size"
            android:layout_height="@dimen/all_title_bt_size"
            android:background="@mipmap/jiantou_left"/>
        <TextView
            android:id="@+id/tv_title_xiangxi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="食物仓库"
            android:textSize="@dimen/all_title_text_size"
            android:layout_centerInParent="true"
            android:textColor="@color/color_Whitecolor"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="@dimen/xiangxi_padding"
                    android:layout_marginBottom="@dimen/xiangxi_padding"
                    android:id="@+id/tv_shicai_xiangxi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="shicai"
                    android:textSize="@dimen/all_title_text_size"
                    android:textColor="@color/color_Maintext"
                    android:padding="@dimen/xiangxi_padding"/>
                <TextView
                    android:id="@+id/tv_collect_xiangxi"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textColor="@color/color_Maintext"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="32dp"
                    android:background="#DACDCD"
                    android:gravity="center"
                    android:onClick="onclick"
                    android:text="收藏"
                    android:textSize="16dp" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/mine_view"
                android:background="@color/color_view"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_description_xiangxi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ooosssdawdsdadwadadasadwdadwadadawdadawdawdasdawdadawada5"
                    android:textSize="@dimen/xiangxi_text_small"
                    android:textColor="@color/color_Maintext"
                    android:padding="@dimen/xiangxi_padding"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xiangxi_margin"
                android:gravity="center">

                <com.example.mysudubomb.myview.MyImageView
                    android:id="@+id/iv_image_xiangxi"
                    android:layout_width="@dimen/xiangxi_image_size"
                    android:layout_height="@dimen/xiangxi_image_size"
                    android:background="@mipmap/ic_launcher_round"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="营养价值（每100g）"
                    android:textSize="@dimen/xiangxi_text_small"
                    android:textColor="@color/color_Maintext"
                    android:padding="@dimen/xiangxi_padding"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/mine_view"
                android:background="@color/color_view"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="热量"
                        android:textSize="@dimen/xiangxi_text_big"
                        android:textColor="@color/color_Maintext"
                        android:padding="@dimen/xiangxi_padding"/>
                    <TextView
                        android:id="@+id/tv_kcal_xiangxi"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="营养价值（每100g）"
                        android:textSize="@dimen/xiangxi_text_big"
                        android:textColor="@color/color_Maintext"
                        android:padding="@dimen/xiangxi_padding"/>
                </RelativeLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/mine_view"
                android:background="@color/color_view"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="碳水"
                        android:textSize="@dimen/xiangxi_text_big"
                        android:textColor="@color/color_Maintext"
                        android:padding="@dimen/xiangxi_padding"/>
                    <TextView

                        android:id="@+id/tv_tanshui_xiangxi"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="营养价值（每100g）"
                        android:textSize="@dimen/xiangxi_text_big"
                        android:textColor="@color/color_Maintext"
                        android:padding="@dimen/xiangxi_padding"/>
                </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/mine_view"
                android:background="@color/color_view"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="蛋白质"
                        android:textSize="@dimen/xiangxi_text_big"
                        android:textColor="@color/color_Maintext"
                        android:padding="@dimen/xiangxi_padding"/>
                    <TextView

                        android:id="@+id/tv_danbai_xiangxi"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="营养价值（每100g）"
                        android:textSize="@dimen/xiangxi_text_big"
                        android:textColor="@color/color_Maintext"
                        android:padding="@dimen/xiangxi_padding"/>
                </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/mine_view"
                android:background="@color/color_view"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="脂肪"
                        android:textSize="@dimen/xiangxi_text_big"
                        android:textColor="@color/color_Maintext"
                        android:padding="@dimen/xiangxi_padding"/>
                    <TextView
                        android:layout_marginBottom="@dimen/xiangxi_margin"
                        android:id="@+id/tv_zhifang_xiangxi"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="营养价值（每100g）"
                        android:textSize="@dimen/xiangxi_text_big"
                        android:textColor="@color/color_Maintext"
                        android:padding="@dimen/xiangxi_padding"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>