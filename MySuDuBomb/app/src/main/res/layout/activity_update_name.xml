<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.UpdateNameActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/all_title_padding">
        <Button
            android:onClick="onclick"
            android:id="@+id/btn_finish_up_name"
            android:layout_width="@dimen/all_title_bt_size"
            android:layout_height="@dimen/all_title_bt_size"
            android:background="@mipmap/jiantou_left_black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑昵称"
            android:textSize="@dimen/all_title_text_size"
            android:layout_centerInParent="true"
            android:textColor="@color/color_Maintext"/>
        <TextView
            android:id="@+id/tv_upname_over"
            android:onClick="onclick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="完成"
            android:layout_alignParentRight="true"
            android:textColor="#998A8A"/>
    </RelativeLayout>
    <EditText
        android:layout_marginTop="30dp"
        android:layout_margin="25dp"
        android:id="@+id/et_upname"
        android:onClick="onclick"
        android:singleLine="true"
        android:maxLength="10"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="     请设置您的昵称"
        android:background="@drawable/shape_layout_search"
        android:textSize="17dp"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_upname_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/10"
            android:textColor="@color/color_Maintext"
            android:layout_alignParentRight="true"
            android:textSize="17dp"
            android:layout_marginRight="30dp"/>
        <TextView
            android:id="@+id/tv_upname_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="17dp"
            android:layout_toLeftOf="@id/tv_upname_max"
            android:textColor="@color/color_Maintext"/>

    </RelativeLayout>

</LinearLayout>