<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/food_item_padding">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_it_shicai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/food_item_text_big"
            android:textColor="@color/color_food_item_big"
            android:text="食材"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_it_kcal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/food_item_sc_betweeen_kcal"
            android:text="256.7kcal"
            android:textColor="@color/color_food_item_big"
            android:textSize="@dimen/food_item_text_big" />
        <TextView
            android:layout_marginLeft="@dimen/food_item_100g_betweeen_kcal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/food_item_text_small"
            android:textColor="@color/color_food_item_small"
            android:text="/ 100g"/>
    </LinearLayout>
</LinearLayout>