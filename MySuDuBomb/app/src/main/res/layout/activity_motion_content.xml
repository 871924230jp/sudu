<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/motion_padding">
    <TextView
        android:textColor="@color/color_Notetext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请输入您的体重、运动时长、运动项目："
        android:textSize="@dimen/motion_content_text"/>

    <LinearLayout

        android:layout_marginTop="@dimen/motion_margintop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:textColor="@color/color_Notetext"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/motion_content_text"
                android:text="真实体重:"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入您的真实体重   (单位为kg)"
                android:id="@+id/et_m_kg"
                android:textSize="@dimen/motion_content_edittext"
                android:maxLines="1"
                android:inputType="number|numberDecimal"
                android:ellipsize="end"
                android:maxLength="5"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/motion_margintop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:textColor="@color/color_Notetext"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/motion_content_text"
                android:text="运动时长:"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入您的运动时长   (单位为min)"
                android:id="@+id/et_m_runtime"
                android:textSize="@dimen/motion_content_edittext"
                android:maxLines="1"
                android:inputType="number|numberDecimal"
                android:ellipsize="end"
                android:maxLength="5"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/motion_margintop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:textColor="@color/color_Notetext"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/motion_content_text"
                android:text="运动项目:"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            >
            <EditText
                android:onClick="onclick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入您的运动项目"
                android:id="@+id/et_m_project"
                android:textSize="@dimen/motion_content_edittext"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>