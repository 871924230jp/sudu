<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_sx_image"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/tv_sx_content"
        android:padding="15dp"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="sdsdwdwdwdwdwdwdwds"
        android:textSize="17dp"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:padding="15dp"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_share_time"
        android:layout_weight="5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="2021-02-03"/>
<LinearLayout
    android:layout_weight="1"
    android:layout_width="0dp"

    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_share_xihuan"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_gravity="center"
        android:background="@mipmap/dianzan"/>
    <TextView
        android:id="@+id/tv_share_likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:gravity="center"
        android:text="32"/>

</LinearLayout>

</LinearLayout>
</LinearLayout>