<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorwhite"
    android:orientation="vertical"
    android:padding="@dimen/high_margin">

    <TextView
        android:id="@+id/sudu"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="开始健康之旅"
        android:layout_centerHorizontal="true"
        android:textColor="#5B5F5B"
        android:textSize="27dp" />
    <LinearLayout
        android:id="@+id/hello"
        android:layout_below="@+id/sudu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="你好,"
                android:layout_marginTop="50dp"
                android:textSize="25dp"
                android:textColor="#010113"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="欢迎来到素度"
                android:textSize="25dp"
                android:textColor="#010113"/>
        </LinearLayout>
    </LinearLayout>

    <EditText
        android:background="@drawable/shape_layout_search"
        android:layout_below="@+id/hello"
        android:layout_marginTop="23dp"
        android:padding="@dimen/high_margin"
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:hint="请输入你的账号(最多十个字符)"
        android:maxLength="10"
        android:maxLines="1"
        android:textColor="#32AF53" />

    <EditText
        android:background="@drawable/shape_layout_search"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/et_username"
        android:padding="@dimen/high_margin"
        android:id="@+id/et_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:hint="请输入你的密码"
        android:maxLines="1"
        android:textColor="#DAC3E0" />

    <RelativeLayout

        android:layout_below="@+id/et_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="30dp"
        android:orientation="horizontal">
        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/btn_go"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/shape_layout_comput"
            android:onClick="login"
            android:text="登录"
            android:textSize="20dp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        >
        <Button
            android:id="@+id/tv_youke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:background="@android:color/transparent"
            android:text="游客方式进入"
            android:textColor="@color/color_denglucolor"
            android:textSize="17dp" />

        <Button
            android:id="@+id/btn_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:background="@android:color/transparent"
            android:padding="3dp"
            android:text="注册账号"
            android:textColor="@color/color_denglucolor"
            android:textSize="17dp" />

    </RelativeLayout>

</RelativeLayout>